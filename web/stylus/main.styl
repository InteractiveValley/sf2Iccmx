			& .contenido-item-libreria
				display inline-block
				vertical-align top
			& figure img
				max-width 200px
			& .contenido-item-libreria
				width 430px
				min-height 200px
				padding-bottom 50px
				position relative
			& .contenido-item-libreria > h3 
				font-size 16px
				font-weight normal
				background-color green
				color white
				padding 3px
				border-radius 3px
			& .contenido-item-libreria .detalles
				color color_gris
				font-size 12px
				line-height 12px
			& ul
				margin 0
				padding 0
			& li 
				list-style none
			& p
				margin 5px 0px
			& .contenido-item-libreria .descripcion
				color color_azul
				font-size 14px
				text-align justify
			& .contenido-item-libreria .adquirirLibro
				margin-top 10px
				padding 10px
				color white
				background-color green
				text-transform uppercase
				border none
				border-radius 5px
				position absolute
				bottom 0px
				right 0px
				
.accesos-vip
	text-align center

.bootstrap-frm
	margin-left auto
	margin-right auto
	max-width 500px
	background #FFF
	padding 20px 30px 20px 30px
	font 12px "Helvetica Neue", Helvetica, Arial, sans-serif
	color #888
	text-shadow 1px 1px 1px #FFF
	border-radius 3px
    & .form-group
		display block
		margin 0px 0px 5px
		position relative
        &>label 
			float left
			width 20%
			text-align right
			padding-right 10px
			margin-top 10px
			color #333
			font-family "Helvetica Neue", Helvetica, Arial, sans-serif
			font-weight bold
			text-transform capitalize
			font-size 14px
    	& input[type="text"],
    	& input[type="password"], 
    	& input[type="email"], 
    	& textarea, 
    	& select 
			border 1px solid #CCC
			color #888
			height 30px
			font-size 15px
			line-height 15px
			margin-bottom 16px
			margin-right 6px
			margin-top 2px
			outline 0 none
			padding 10px 5px
			width 70%
			border-radius 4px
			height 40px
			box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
		& select 
			background #FFF url('down-arrow.png') no-repeat right
			background #FFF url('down-arrow.png') no-repeat right
			appearance none
			-webkit-appearance none 
			-moz-appearance none
			text-indent 0.01px
			text-overflow ''
			width 70%
			height 35px
			line-height 15px
	    & textarea 
			height 100px
			padding 5px 0px 0px 5px
			width 70%
	    & input[type="submit"] 
			background #FFF
			border 1px solid #CCC
			padding 10px 25px 10px 25px
			color #333
			border-radius 4px
		& input[type="submit"]hover 
			color #333
			background-color #EBEBEB
			border-color #ADADAD
		& span.errores 
			color red
			position relative
			top -10px
			left 112px
		& span.errores ul 
			margin 0
			padding 0
    	& span.errores ul li 
			list-style none