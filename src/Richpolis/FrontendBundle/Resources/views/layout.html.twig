    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="{{asset('css/site_global.css')}}"/>
    <link rel="stylesheet" type="text/css" href="{{asset('css/master_home.css')}}"/>
    <link rel="stylesheet" type="text/css" href="{{asset('css/index.css')}}" id="pagesheet"/>

