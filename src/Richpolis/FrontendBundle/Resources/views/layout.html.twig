{% block body %}
    <div class="shadow clearfix" id="page"><!-- column -->
        <div class="colelem"><!-- custom html -->
            <div id="fb-root"></div>
            <script>(function(d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (d.getElementById(id))
                        return;
                    js = d.createElement(s);
                    js.id = id;
                    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
                    fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));</script>
        </div>
        <div class="menu colelem"><!-- custom html -->
            <!-- AddThis Smart Layers BEGIN -->
            <!-- Go to http://www.addthis.com/get/smart-layers to customize -->
            <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5227d94e5f260ea2"></script>
            <script type="text/javascript">
                addthis.layers({
                    'theme': 'transparent',
                    'share': {
                        'position': 'left',
                        'numPreferredServices': 3
                    },
                    'follow': {
                        'services': []
                    },
                    'whatsnext': {}
                });
            </script>
            <!-- AddThis Smart Layers END -->
        </div>
        {# include 'FrontendBundle:Default:menuPrincipal.html.twig' #}
        {{ render(controller('FrontendBundle:Default:menuPrincipal')) }}
        <div id="contenidoPrincipal">
            {% block contenido %}{% endblock %}
            <div class="verticalspacer"></div>
            <!-- footer -->
            {% include 'FrontendBundle:Default:footer.html.twig' %}
            <!-- end footer -->            
        </div>

    </div>

{% endblock %}

