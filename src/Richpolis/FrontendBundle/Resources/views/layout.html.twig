    <style>
        .container{
            max-width: none !important;
            width: 1024px;
        }
        .formulario-buscar input[type="submit"] {
            font-size: 13px;
            position: absolute;
            right: 0;
            top: -2px;
            height: 20px;
            padding: 1px;
            width: 68px;
        }
        .formulario-buscar input[type="text"] {
            font-size: 13px;
            left: 0;
            margin: 0;
            padding: 0;
            position: absolute;
            top: -2px;
            height: 20px;
        }
        .bootstrap-frm .form-group label{
            float: left;
            width: 20%;
            text-align: right;
            padding-right: 10px;
            margin-top: 10px;
            color: #333;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bold;
            text-transform: capitalize;
            font-size: 14px;
        }
        .bootstrap-frm .form-group textarea{
            height: 100px;
            padding: 5px 0px 0px 5px;
            width: 70%;
        }
        .bootstrap-frm .form-group input[type="submit"] {
            background: #fff;
            border: 1px solid #ccc;
            padding: 10px 25px 10px 25px;
            color: #333;
            -webkit-border-radius: 4px;
            border-radius: 4px;
            margin-left: 20%;
        }
			
    </style>
    <!-- Other scripts -->
    <script type="text/javascript">
        document.documentElement.className += ' js';
    </script>
