{% set children = categoria.children | length %}
{% if children > 0 %}
    <li class="has_sub">
        <a href="#"> 
            <span>{{ categoria.nivelCategoria }}</span>
            <span class="pull-right"><i class="fa fa-chevron-left"></i></span>
        </a>
        <ul>
            <li>
                <a href="{{ path('publicaciones_categoria', { 'slug': categoria.slug }) }}"> 
                    <span>{{ categoria.nivelCategoriaSinParent }}</span>
                    <!--span class="pull-right badge">{{categoria.contPublicaciones}}</span-->
                </a> 
            </li>

            {% for child in categoria.children %}
                {% include 'PublicacionesBundle:CategoriaPublicacion:ulPublicacionesItem.html.twig' with {'categoria': child } %}
            {% endfor %}

        </ul>
    </li>
{% else %}    
    <li>
        <a href="{{ path('publicaciones_categoria', { 'slug': categoria.slug }) }}"> 
            <span>{{ categoria.nivelCategoria }}</span>
            <!--span class="pull-right badge">{{categoria.contPublicaciones}}</span-->
        </a> 
    </li>
{% endif %}    
